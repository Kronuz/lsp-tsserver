{
	"compilerOptions": {
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"target": "es6",
		"module": "commonjs",
		"plugins": [
			{"name": "tslint-language-service"}
		],
		"moduleResolution": "node",
		"sourceMap": true,
		"lib" : [ "es2016" ],
		//"rootDir": "src",
		"outDir" : "build"
		// "outDir": "../client/server"
	},
	"exclude": [
		"node_modules"
	]
}